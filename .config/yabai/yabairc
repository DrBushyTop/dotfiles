# allow loading of scripts
yabai -m signal --add event=dock_did_restart action="sudo yabai --load-sa"
sudo yabai --load-sa

# Floating on space 1 temporarily
yabai -m config layout bsp
yabai -m config --space 1 layout float

# Mouse Focus
yabai -m config focus_follows_mouse autofocus

# Placement logic
yabai -m config window_placement second_child

# Padding
yabai -m config top_padding    3
yabai -m config bottom_padding 3
yabai -m config left_padding   3
yabai -m config right_padding  3
yabai -m config window_gap     3

# set mouse interaction modifier key (default: fn)
yabai -m config mouse_modifier ctrl

# set modifier + left-click drag to move window (default: move)
yabai -m config mouse_action1 move

# set modifier + right-click drag to resize window (default: resize)
yabai -m config mouse_action2 resize

yabai -m config mouse_drop_action swap

# Appearance
yabai -m config window_shadow float

yabai -m config window_opacity off
yabai -m config active_window_opacity 1.0
yabai -m config normal_window_opacity 1.0

# Rules
yabai -m rule --add app="^licecap$" sticky=on layer=above manage=off
yabai -m rule --add app="^System Preferences$" layer=above manage=off
yabai -m rule --add app="^Finder$" layer=above manage=off
yabai -m rule --add app="^Spotify$" manage=off
yabai -m rule --add title='Preferences$' manage=off layer=above
yabai -m rule --add app="^Activity Monitor$" layer=above manage=off
yabai -m rule --add app="^JetBrains Toolbox$" layer=above manage=off
yabai -m rule --add app="^Copy$" layer=above manage=off
yabai -m rule --add app="^VLC" manage=off
yabai -m rule --add app="^1Password*" manage=off
yabai -m rule --add app="Steam*" manage=off
yabai -m rule --add app="Dota*" manage=off

# Animations
yabai -m config window_animation_duration 0.0
yabai -m config window_animation_frame_rate 120

# Borders have been removed by yabai
# yabai -m config window_border on
# yabai -m config window_border_width 3
# yabai -m config window_border_blur off
# yabai -m config window_border_hidpi on
# yabai -m config window_border_radius 0
# yabai -m config active_window_border_color 0xff32CD32
# yabai -m config normal_window_border_color 0x05FF00FF

# using FelixKrathz/JankyBorders
borders active_color=0xff32CD32 inactive_color=0x05FF00FF width=7.0 &

## SIP Required, prevent borders from being below
#yabai -m config active_window_border_topmost on

echo "yabai configuration loaded.."
